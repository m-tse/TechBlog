<% provide(:title, 'Edit Contents!') %>
<div class="container">
<div class="row">
<div class = "span4 offset1">
<h1>Edit Contents</h1><br>
</div>
</div>
<%= form_for(@page_contents, :html => { :class => "form-horizontal"} ) do |f| %>
<%= f.text_area :content, placeholder: "Compose new content...", rows:10, class:"input-xxlarge" %>

<%= f.submit "Change page", class: "btn btn-large btn-primary" %>

<% end %>
</div>

