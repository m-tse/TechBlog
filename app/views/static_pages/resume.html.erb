<% provide(:title, 'Resume') %>


<div class="container">

  <h1 class="nonHomeTitle">Resume</h1>
  <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      <li class="active">
	<a href="#tab1" data-toggle="tab">Education</a>
      </li>
      <li>
	<a href="#tab2" data-toggle="tab">Work Experience</a>
      </li>

    </ul>
    <div class="tab-content">
      <div class="tab-pane fade active in" id="tab1">
	<%= markdown(@resume_education.content) %>
	<% if admin_signed_in? %>
	<%= link_to "Edit", edit_page_content_path(@resume_education), :class => "btn" %>
	<% end %>
      </div>
      <div class="tab-pane fade" id="tab2">
	<%= markdown(@resume_work_experience.content) %>
	<% if admin_signed_in? %>
<%= link_to "Edit", edit_page_content_path(@resume_work_experience), :class => "btn" %>
<% end %>
      </div>

    </div>
  </div>

</div>
